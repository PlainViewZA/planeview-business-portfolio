---
import MainLayout from '../layouts/MainLayout.astro';
import Navigation from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<MainLayout 
  title="Plane View Collective | Clarity, created with people in mind"
  description="We help brands get noticed, understood, and remembered through strategic clarity and creative execution."
>
  <Navigation />
  
  <Hero />

  <!-- Services Section -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <h2>What We Do</h2>
        <p class="lead">We remove confusion and help brands stand out naturally.</p>
      </div>

      <div class="grid grid-3">
        <article class="card">
          <div class="card-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3>Brand Strategy</h3>
          <p>Clear direction and positioning that resonates with real people.</p>
        </article>

        <article class="card">
          <div class="card-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
              <path d="M9 3V21" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <h3>Website Design</h3>
          <p>Performance-first design with clear hierarchy and strong CTAs.</p>
        </article>

        <article class="card">
          <div class="card-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M21 11.5C21 16.75 16.75 21 11.5 21C6.25 21 2 16.75 2 11.5C2 6.25 6.25 2 11.5 2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M22 2L12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
          <h3>Digital Marketing</h3>
          <p>Campaigns that turn attention into action.</p>
        </article>
      </div>
    </div>
  </section>

  <!-- How We Work Section -->
  <section class="section high-contrast">
    <div class="container">
      <div class="section-header">
        <h2>How We Work</h2>
      </div>

      <div class="work-process">
        <div class="process-step">
          <div class="step-number">01</div>
          <h3>Listen First</h3>
          <p>We start by understanding your challenge, audience, and goals.</p>
        </div>

        <div class="process-step">
          <div class="step-number">02</div>
          <h3>Think Clearly</h3>
          <p>Strategic clarity before creative execution. We solve real problems.</p>
        </div>

        <div class="process-step">
          <div class="step-number">03</div>
          <h3>Create with Purpose</h3>
          <p>Every design, campaign, and build focuses on measurable impact.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Messaging Pillars Section -->
  <section class="section">
    <div class="container container-narrow">
      <div class="section-header">
        <h2>Our Approach</h2>
        <p class="lead">Everything we create helps people understand brands faster, feel something when they see them, and know what to do next.</p>
      </div>

      <div class="pillars">
        <div class="pillar-item">
          <h4>Clarity</h4>
          <p>We remove confusion</p>
        </div>
        
        <div class="pillar-item">
          <h4>Attention</h4>
          <p>We help brands stand out naturally</p>
        </div>
        
        <div class="pillar-item">
          <h4>Connection</h4>
          <p>People connect with people, not logos</p>
        </div>
        
        <div class="pillar-item">
          <h4>Creativity</h4>
          <p>Design that actually serves a purpose</p>
        </div>
        
        <div class="pillar-item">
          <h4>Execution</h4>
          <p>Ideas are useless if they don't ship</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section section-sm">
    <div class="container">
      <div class="cta-box">
        <h2>Ready to make your brand clearer?</h2>
        <p>Let's talk about your project.</p>
        <a href="/contact" class="btn btn-primary btn-lg">
          Get in Touch
          <span class="arrow">â†’</span>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</MainLayout>

<style>
  /* Section Headers */
  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--spacing-2xl);
  }

  .lead {
    font-size: 1.25rem;
    color: var(--color-slate-grey);
  }

  /* Card Icon */
  .card-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-md);
    color: var(--color-steel-blue);
  }

  /* Work Process */
  .work-process {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-2xl);
    margin-top: var(--spacing-2xl);
  }

  .process-step {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .step-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-steel-blue);
    line-height: 1;
  }

  /* Pillars */
  .pillars {
    display: grid;
    gap: var(--spacing-lg);
    margin-top: var(--spacing-xl);
  }

  .pillar-item {
    padding: var(--spacing-lg);
    border-left: 3px solid var(--color-steel-blue);
  }

  .pillar-item h4 {
    margin-bottom: var(--spacing-xs);
    font-size: 1.25rem;
  }

  .pillar-item p {
    color: var(--color-slate-grey);
    margin: 0;
  }

  /* CTA Box */
  .cta-box {
    text-align: center;
    padding: var(--spacing-3xl) var(--spacing-xl);
    background-color: rgba(47, 111, 237, 0.05);
    border-radius: var(--radius-lg);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-md);
  }

  .cta-box h2 {
    margin: 0;
  }

  .cta-box p {
    font-size: 1.125rem;
    color: var(--color-slate-grey);
    margin: 0;
  }

  .btn-lg {
    padding: var(--spacing-md) var(--spacing-xl);
    font-size: 1.125rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .work-process {
      grid-template-columns: 1fr;
    }
  }
</style>