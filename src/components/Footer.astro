---
// Footer Component - Plane View Collective
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { label: 'Brand Strategy', href: '/services/brand-strategy' },
    { label: 'Website Design', href: '/services/web-design' },
    { label: 'Digital Marketing', href: '/services/digital-marketing' },
    { label: 'Social Content', href: '/services/social-content' }
  ],
  company: [
    { label: 'About Us', href: '/about' },
    { label: 'Our Work', href: '/work' },
    { label: 'Contact', href: '/contact' }
  ]
};

const socialLinks = [
  { label: 'LinkedIn', href: '#', icon: 'linkedin' },
  { label: 'Instagram', href: '#', icon: 'instagram' },
  { label: 'Twitter', href: '#', icon: 'twitter' }
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <!-- Brand Column -->
      <div class="footer-brand">
        <div class="logo">
          <svg width="40" height="40" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M28 4L14 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M28 4L19 28L14 18L4 13L28 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <p class="footer-tagline">
          Clarity, created with people in mind.
        </p>
        <p class="footer-location">
          Founded in Cape Town
        </p>
      </div>

      <!-- Services Column -->
      <div class="footer-column">
        <h4 class="footer-heading">Services</h4>
        <ul class="footer-links">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Column -->
      <div class="footer-column">
        <h4 class="footer-heading">Company</h4>
        <ul class="footer-links">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Column -->
      <div class="footer-column">
        <h4 class="footer-heading">Get in Touch</h4>
        <p class="footer-text">
          Ready to make your brand clearer?
        </p>
        <a href="/contact" class="btn btn-secondary">
          Start a Project
          <span class="arrow">→</span>
        </a>
      </div>
    </div>

    <hr class="divider" />

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <p class="footer-copyright">
        © {currentYear} Plane View Collective. All rights reserved.
      </p>
      <div class="footer-social">
        {socialLinks.map((social) => (
          <a href={social.href} aria-label={social.label} class="social-link">
            {social.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-jet-black);
    color: var(--color-pure-white);
    padding-top: var(--spacing-3xl);
    padding-bottom: var(--spacing-xl);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
  }

  /* Brand Column */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .logo svg {
    width: 40px;
    height: 40px;
    color: var(--color-pure-white);
  }

  .footer-tagline {
    font-size: 1.125rem;
    font-weight: 500;
    margin: 0;
    max-width: 280px;
  }

  .footer-location {
    font-size: 0.875rem;
    color: var(--color-slate-grey);
    margin: 0;
  }

  /* Footer Columns */
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .footer-heading {
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-pure-white);
    margin: 0;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .footer-links a {
    color: var(--color-slate-grey);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color var(--transition-base);
  }

  .footer-links a:hover {
    color: var(--color-pure-white);
  }

  .footer-text {
    color: var(--color-slate-grey);
    font-size: 0.9375rem;
    margin: 0;
  }

  /* Divider */
  .divider {
    background-color: rgba(255, 255, 255, 0.1);
    margin: var(--spacing-2xl) 0;
  }

  /* Bottom Bar */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .footer-copyright {
    font-size: 0.875rem;
    color: var(--color-slate-grey);
    margin: 0;
  }

  .footer-social {
    display: flex;
    gap: var(--spacing-lg);
  }

  .social-link {
    color: var(--color-slate-grey);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color var(--transition-base);
  }

  .social-link:hover {
    color: var(--color-pure-white);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-xl);
    }
  }

  @media (max-width: 640px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .footer-bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-md);
    }
  }
</style>